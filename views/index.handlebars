<!--Homepage-->

<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1><img src="/images/yahoo-news-logo.png"> Mongo Scrapper</h1>
            <p>Use the scrape articles button to populate the page with articles. Then view and save your favorites, you can even add notes!!!</p>
        </div>

    </div>
    <div class="col-md-12">
        {{#if article}}
        {{#each article}}
        <div class="card">
            <div class="card-header">
                <h4>{{this.title}}</h4>
            </div>
            <div class="card-body">
                <p> {{this.summary}}</p>
                <a href={{this.link}} target="_blank">{{this.link}}</a>
                <br><br>
                <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="card">
            <div class="card-body">
                <h4>Looks like you don't have any articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/app.js"></script>